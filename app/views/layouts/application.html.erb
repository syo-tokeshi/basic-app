<!DOCTYPE html>
<html>
  <head>
    <title>BasicApp</title>
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>
      <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if session[:user_id] %>
     <ul class="link_top container">
       <li>ユーザーID:<%= @current_user.name %></li>
       <li><%= link_to "ホーム",home_path %></li>
       <li><%= link_to "ユーザー一覧",users_path %></li>
       <li><%= link_to "投稿一覧",posts_path %></li>
       <li><%= link_to "新規投稿",new_post_path %></li>
       <li><%= link_to "ログアウト",logout_path,method: :post %></li>
    <% else %>
       <li><%= link_to "新規登録",new_user_path %></li>
       <li><%= link_to "ログイン",login_path %></li>
     </ul>
    <% end %>

  <% if flash[:notice] %>
    <h1 class="text-danger text-center display-3"><%= flash[:notice] %></h1>
  <% end %>

  <div class="container text-center">
    <%= yield %>
  </div>

  </body>
</html>
